<div class='wrapper'>
  <%= render(:partial => 'navbar', :locals => {:is_logged_in => true}) %>
  <div class='container'>

    <p id="notice"><%= notice %></p>

    <h1>Members</h1>
    <%= link_to("To Home Page", {:controller => 'announcements', :action=>'index'}, :class => 'underline')%>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Points</th>
          <th>Admin</th>
          <th>Owner</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= member.name %></td>
            <td><%= member.totalPoints %></td>
            <td><%= member.isAdmin %></td>
            <td><%= member.isOwner %></td>
            <td><%= link_to 'Show', member, :class => 'underline' %></td>
            <br>
            <% if @is_admin %>
              <td><%= link_to 'Edit', edit_member_path(member), :class => 'underline' %></td>
              <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'underline' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <% if @is_admin %>
    <%= link_to 'New Member', new_member_path, :class => 'underline' %>
    <% end %>

  </div>
</div>
