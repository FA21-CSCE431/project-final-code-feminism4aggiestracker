<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= link_to("To Home Page", {:controller => 'announcements', :action=>'index'})%>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.likes %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>

        <% if(Like.exists?(:member_id => 1, :post_id => post.id)) %>
          <% @like = Like.find_by(member_id: 1, post_id: post.id) %>
          <td><%= link_to("Un-like This Post", delete_like_path(@like, :post_id => post.id, :member_id => 1), data: { confirm: 'Are you sure?' }) %></td>
        <% else %>
          <td><%= link_to("Like This Post", likes_path(:like => @like, :post_id => post.id, :member_id => 1), method: :create) %>
        <% end %></td>

        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
